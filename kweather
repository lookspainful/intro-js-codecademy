//Saving today's forecast, and not changing it later lol:
const kelvin = 0;

//Converting to celsius
let celsius = kelvin - 273;

//Converting to farenheit, then rounding it down
let farenheit = Math.floor(celsius * (9/5) + 32);

console.log(`The temperature is ${farenheit} degrees farenheit.`);

//Converting celsius to Newton scale, printing the result
let newton = Math.floor(celsius * 33/100);
console.log(`The temperature is ${newton}N.`);
